---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		<script
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-RD6R6488H7"
		></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-RD6R6488H7");
		</script>

		<meta charset="UTF-8" />
		<meta name="title" content="Edison Hills" />
		<meta
			name="description"
			content="Edison Hills is a new retail space in Cookeville, Tennessee, featuring curated vintage home goods and clothing, modern gifts, and a creative classroom."
		/>

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://edisonhills.com" />
		<meta property="og:title" content="Edison Hills" />
		<meta
			property="og:description"
			content="Edison Hills is a new retail space in Cookeville, Tennessee, featuring curated vintage home goods and clothing, modern gifts, and a creative classroom."
		/>
		<meta property="og:image" content="/assets/meta.png" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://edisonhills.com" />
		<meta property="twitter:title" content="Edison Hills" />
		<meta
			property="twitter:description"
			content="Edison Hills is a new retail space in Cookeville, Tennessee, featuring curated vintage home goods and clothing, modern gifts, and a creative classroom."
		/>
		<meta property="twitter:image" content="/assets/meta.png" />

		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		--tan: #fff3d9;
		--red: #dd4326;
		--yellow: #ffc935;
		--navy: #10111e;
		--green: #c6ca53;
		--background-color: var(--tan);
		--banner-color: var(--red);
	}
	html {
		font-family: "Outfit", system-ui, sans-serif;
		background: var(--background-color);
	}

	h1,
	h2,
	h3,
	h4,
	h5 {
		text-transform: uppercase;
		font-weight: 900;
		margin-bottom: 0;
	}

	p {
		font-size: 1.25rem;
	}

	a {
		color: var(--navy);
		font-weight: bold;
	}

	.container {
		display: flex;
	}
</style>
